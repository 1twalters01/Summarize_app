{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "checkJs": true,
    },
    "include": [
        "src/**/*",
    ],
    "exclude": ["node_modules", "dist"]
}
